{/* HTNKフォーム */}
<div class="c-form">
  {/* 検索フォーム */}
  <form class="c-form" action="/" method="get">
    <div>
      <label for="search">検索する</label>
      <input
        type="search"
        id="search"
        name="search"
        class="c-form__input"
        placeholder="キーワードを入力"
      />
      <button type="submit" name="search-btn" class="c-button">検索</button>
    </div>
  </form>

  {/* 問い合わせ・登録用フォーム */}
  <form method="post" action="">
    <dl>
      <div>
        <dt><label for="name">お名前</label><span>必須</span></dt>
        <dd>
          <input
            type="text"
            id="name"
            class="c-form__input"
            name="name"
            placeholder="例：山田 太郎"
            autocomplete="name"
            required={true}
          />
        </dd>
      </div>
      <div>
        <dt>生年月日<span>必須</span></dt>
        <dd>
          {/*数値はユーザーの年齢層に合わせて変更 */}
          <select
            name="birth-day"
            class="c-form__select"
            title="誕生年"
            required={true}
          >
            <option hidden></option>
            <option value="" selected>年</option>
            {
              Array.from({ length: 100 }).map((_, index) => {
                const year = new Date().getFullYear() - index;
                return <option value={year}>{year}</option>;
              })
            }
          </select>
          <select
            name="birth-mouth"
            class="c-form__select"
            title="誕生月"
            required={true}
          >
            <option hidden></option>
            <option value="" selected>月</option>
            {
              Array.from({ length: 12 }).map((_, i) => {
                const month = i + 1;
                return <option value={month}>{month}</option>;
              })
            }
          </select>
          <select
            name="birth-day"
            class="c-form__select"
            title="誕生日"
            required={true}
          >
            <option hidden></option>
            <option value="" selected>日</option>
            {
              Array.from({ length: 31 }).map((_, i) => {
                const day = i + 1;
                return <option value={day}>{day}</option>;
              })
            }
          </select>
        </dd>
      </div>
      <div>
        <dt><label for="email">メールアドレス</label><span>必須</span></dt>
        <dd>
          <!--  aria-invalid="true" aria-describedBy="id" はエラー時に付与する  -->
          <input
            type="email"
            id="email"
            class="c-form__input"
            name="email"
            placeholder="例：sample@sample.com"
            autocomplete="email"
            aria-describedby="exEmail"
            aria-invalid="true"
            aria-errormessage="errEmail"
            required={true}
          />
          <p id="exEmail">半角でご入力ください</p>
          <p id="errEmail" class="c-form__error">
            正しいメールアドレスの形式で入力してください
          </p>
        </dd>
      </div>
      <div>
        <dt><label for="tel">電話番号</label></dt>
        <dd>
          <input
            type="tel"
            id="tel"
            class="c-form__input"
            name="tel"
            placeholder="例：090-1234-5678"
            autocomplete="tel"
            title="半角数字で入力してください"
            aria-describedby="exTel"
            required={true}
          />
          <p id="exTel">半角でご入力ください</p>
        </dd>
      </div>
      {/* 住所 */}
      <div>
        <dt>
          <label for="postalCode">郵便番号</label>
        </dt>
        <dd>
          <input
            type="text"
            id="postalCode"
            class="c-form__input"
            name="postalCode"
            title="郵便番号を半角数字かつハイフンなしで入力してください"
            inputmode="numeric"
            pattern="\\d{7}"
            placeholder="1234567"
            autocomplete="postal-code"
            aria-describedby="exPostalCode"
          />
          <p id="exPostalCode">半角でご入力ください</p>
        </dd>
      </div>
      <div>
        <dt>住所</dt>
        <dd>
          <select name="prefecture" class="c-form__select" title="都道府県">
            <option hidden>選択してください</option>
            <optgroup label="北海道地方">
              <option value="北海道">北海道</option>
            </optgroup>
            <optgroup label="東北地方">
              <option value="青森県">青森県</option>
              <option value="岩手県">岩手県</option>
              <option value="宮城県">宮城県</option>
              <option value="秋田県">秋田県</option>
              <option value="山形県">山形県</option>
              <option value="福島県">福島県</option>
            </optgroup>
            <optgroup label="関東地方">
              <option value="茨城県">茨城県</option>
              <option value="栃木県">栃木県</option>
              <option value="群馬県">群馬県</option>
              <option value="埼玉県">埼玉県</option>
              <option value="千葉県">千葉県</option>
              <option value="東京都">東京都</option>
              <option value="神奈川県">神奈川県</option>
            </optgroup>
            <optgroup label="中部地方">
              <option value="新潟県">新潟県</option>
              <option value="富山県">富山県</option>
              <option value="石川県">石川県</option>
              <option value="福井県">福井県</option>
              <option value="山梨県">山梨県</option>
              <option value="長野県">長野県</option>
              <option value="岐阜県">岐阜県</option>
              <option value="静岡県">静岡県</option>
              <option value="愛知県">愛知県</option>
            </optgroup>
            <optgroup label="近畿地方">
              <option value="三重県">三重県</option>
              <option value="滋賀県">滋賀県</option>
              <option value="京都府">京都府</option>
              <option value="大阪府">大阪府</option>
              <option value="兵庫県">兵庫県</option>
              <option value="奈良県">奈良県</option>
              <option value="和歌山県">和歌山県</option>
            </optgroup>
            <optgroup label="中国地方">
              <option value="鳥取県">鳥取県</option>
              <option value="島根県">島根県</option>
              <option value="岡山県">岡山県</option>
              <option value="広島県">広島県</option>
              <option value="山口県">山口県</option>
            </optgroup>
            <optgroup label="四国地方">
              <option value="徳島県">徳島県</option>
              <option value="香川県">香川県</option>
              <option value="愛媛県">愛媛県</option>
              <option value="高知県">高知県</option>
            </optgroup>
            <optgroup label="九州・沖縄地方">
              <option value="福岡県">福岡県</option>
              <option value="佐賀県">佐賀県</option>
              <option value="長崎県">長崎県</option>
              <option value="熊本県">熊本県</option>
              <option value="大分県">大分県</option>
              <option value="宮崎県">宮崎県</option>
              <option value="鹿児島県">鹿児島県</option>
              <option value="沖縄県">沖縄県</option>
            </optgroup>
          </select>
          <input
            type="text"
            name="city"
            class="c-form__input"
            title="市区町村"
            placeholder="住之江区平林南"
            autocomplete="address-level2"
          />
          <input
            type="text"
            name="address"
            class="c-form__input"
            title="番地"
            placeholder="3-2-1"
            autocomplete="street-address"
          />
        </dd>
      </div>
      {/* クレジットカード情報 */}
      <div>
        <dt>
          <label for="cardNumber">クレジットカード番号</label>
        </dt>
        <dd>
          <input
            type="text"
            id="cardNumber"
            name="cardNumber"
            class="c-form__input"
            inputmode="numeric"
            pattern="\d{14,16}"
            placeholder="1234 5687 9012"
            title="14~16桁の半角英数字で入力してください"
            autocomplete="cc-number"
            size="17"
            required={true}
          />
        </dd>
      </div>
      <div>
        <dt>
          <label for="cardName">クレジットカード名義人</label>
        </dt>
        <dd>
          <input
            type="text"
            id="cardName"
            name="cardName"
            class="c-form__input"
            placeholder="TARO YAMADA"
            autocomplete="cc-name"
            required={true}
          />
        </dd>
      </div>
      <div>
        <dt>
          <label for="cardMonth">クレジットカード有効期限（MM/YY）</label>
        </dt>
        <dd>
          <div>
            <div>
              <input
                id="cardMonth"
                type="text"
                name="cardMonth"
                class="c-form__input"
                inputmode="numeric"
                pattern="\d{2}"
                aria-label="カード有効期限（月）"
                placeholder="MM"
                title="2桁の半角英数字で入力してください"
                autocomplete="cc-exp-month"
                required={true}
              />
            </div>
            <div>
              <input
                type="text"
                name="cardYear"
                class="c-form__input"
                inputmode="numeric"
                pattern="\d{2}"
                aria-label="カード有効期限（年）"
                placeholder="YY"
                title="2桁の半角英数字で入力してください"
                autocomplete="cc-exp-year"
                required={true}
              />
            </div>
          </div>
        </dd>
      </div>
      <div>
        <dt>
          <label for="cardCVC">セキュリティコード</label>
        </dt>
        <dd>
          <input
            type="text"
            id="cardCVC"
            name="cardCVC"
            class="c-form__input"
            inputmode="numeric"
            pattern="\d{3,4}"
            placeholder="000"
            title="3~4桁の半角英数字で入力してください"
            autocomplete="cc-csc"
            size="4"
            required={true}
          />
        </dd>
      </div>
      {/* テキストエリア */}
      <div>
        <dt><label for="textarea">お問い合わせ内容</label></dt>
        <dd>
          <textarea
            id="textarea"
            name="textarea"
            class="c-form__textarea"
            placeholder="お問い合わせ内容をご入力ください"
            cols="50"
            rows="5"></textarea>
        </dd>
      </div>
      {/* パスワード */}
      <div>
        <dt><label for="password">パスワード</label></dt>
        <dd>
          <input
            type="password"
            id="password"
            name="password"
            class="c-form__input"
            value=""
          />
        </dd>
      </div>
      {/* プルダウン */}
      <div>
        <dt><label for="select">セレクトフォーム</label></dt>
        <dd>
          <select name="select" id="select" class="c-form__select">
            <option hidden>選択してください</option>
            <option value="項目１">項目１</option>
            <option value="項目２">項目２</option>
            <option value="項目３">項目３</option>
          </select>
        </dd>
      </div>
      {/* ファイル添付 */}
      <div>
        <dt><label for="file">ファイル添付</label></dt>
        <dd>
          <input type="file" id="file" name="file" class="c-form__file" />
        </dd>
      </div>
    </dl>
    {/* ラジオボタン */}
    <fieldset>
      <legend>ラジオボタン</legend>
      <ul>
        <li>
          <input
            type="radio"
            id="radio-1"
            name="radio"
            class="c-form__radio"
            value="項目１"
          />
          <label for="radio-1">項目１</label>
        </li>
        <li>
          <input
            type="radio"
            id="radio-2"
            name="radio"
            class="c-form__radio"
            value="項目２"
          />
          <label for="radio-2">項目２</label>
        </li>
        <li>
          <input
            type="radio"
            id="radio-3"
            name="radio"
            class="c-form__radio"
            value="項目３"
          />
          <label for="radio-3">項目３</label>
        </li>
      </ul>
    </fieldset>
    {/* チェックボックス */}
    <fieldset>
      <legend>チェックボックス</legend>
      <ul>
        <li>
          <input
            type="checkbox"
            id="checkbox-1"
            name="checkbox[data][]"
            class="c-form__checkbox"
            value="項目１"
          />
          <label for="checkbox-1">項目１</label>
        </li>
        <li>
          <input
            type="checkbox"
            id="checkbox-2"
            name="checkbox[data][]"
            class="c-form__checkbox"
            value="項目２"
          />
          <label for="checkbox-2">項目２</label>
        </li>
        <li>
          <input
            type="checkbox"
            id="checkbox-3"
            name="checkbox[data][]"
            class="c-form__checkbox"
            value="項目３"
          />
          <label for="checkbox-3">項目３</label>
        </li>
      </ul>
    </fieldset>
    <p>
      <button type="submit" name="submitConfirm" class="c-button"
        >確認画面へ</button
      >
      <button type="button">戻る</button>
    </p>
  </form>
</div>
