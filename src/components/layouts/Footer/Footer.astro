---
import { getPath } from "@/utils";

const nav = [
  {
    name: "Top",
    path: getPath.home(),
  },
  {
    name: "Contact",
    path: getPath.contact(),
  },
  {
    name: "Sample",
    path: getPath.sample(),
  },
];
---

<footer class="l-footer">
  <div class="l-pagetop">
    <a href="#pagetop" class="l-pagetop__link" aria-label="ページトップへ戻る"
    ></a>
  </div>
  <div class="l-footer__inner">
    <nav class="l-footer__nav" aria-label="footer navigation">
      <ul class="l-footer__navList">
        {
          nav.map(({ name, path }) => (
            <li class="l-footer__navItem">
              <a href={path} class="l-footer__navLink">
                <span>{name}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <small class="l-footer__copy">&copy; company name</small>
  </div>
</footer>
